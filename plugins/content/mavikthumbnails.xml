    <params>
		<param name="popuptype" type="list" default="slimbox" label="Type of popup" description="Select type of popup for full image">
			<option value="none">None</option>
			<option value="slimbox">Slimbox</option>
			<option value="highslide">Highslide (for non-commercial sites)</option>
			<option value="modal">Joomla Modal</option>
		</param>
		<param name="thumbputh" type="text" default="plugins/content/mavikthumbnails/thumbnails" label="Directory for thumbnails" description="Existent directory for thumbnails" />
		<param name="blog_link" type="radio" default="0" label="Link to article for blog" description="Images is links to full text in blogs">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="zoomin_img" type="radio" default="0" label="Magnifying glass at thumbnails (experimental)" description="Show magnifying glass at thumbnails">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="zoomin_cur" type="radio" default="0" label="Show special cursor" description="Show cursor magnifying glass at thumbnails">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
		<param name="@spacer" type="spacer" default="" label="" description="" />
		<param name="link_scripts" type="radio" default="1" label="Link to scripts" description="Set it No if scripts conflict with other components">
			<option value="0">No</option>
			<option value="1">Yes</option>
		</param>
    </params>
</install>